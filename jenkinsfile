pipeline {
            agent any
            tools {
                maven 'local_maven'
            }
            stages {
                stage('version'){
                    steps {
                        sh 'mvn --version'
                        sh 'pwd'
                    }
                }
    
                stage('Build') {
                    steps {
                        sh 'mvn  package'
                    }
    
                    // // post {
                    //     success {
                    //         archiveArtifacts artifacts: '/target/*.war', fingerprint: true
                    //     }
                    // }
                }
                stage('clean'){
                    steps {
                        sh 'mvn clean install'
                    }
                }
                // stage('Deploy to Tomcat') {

pipeline {
            agent any
            tools {
                maven 'local_maven'
            }
            stages {
                stage('version'){
                    steps {
                        bat 'mvn --version'
                        bat 'cd'
                    }
                }
    
                stage('Build') {
                    steps {
                        bat 'mvn package'
                    }
    
                    post {
                        success {
                            archiveArtifacts artifacts: '/target/*.jar', fingerprint: true
                        }
                    }
                }
                stage('clean'){
                    steps {
                        bat 'mvn clean install'
                    }
                }
####
                stage('Deploy to Tomcat') {
                    steps {
                      bat deployToContainer(credentialsId: 'de13baa938-ba75-4b34-a1fb-30c6739850c3', url: 'http://localhost:8085', war: '/*.war', contextPath: 'http://localhost:8085/manager/html')
                    }
####
stage ('Deploy') {
      steps {
        script {
          deploy adapters: [tomcat9(credentialsId: 'de13baa938-ba75-4b34-a1fb-30c6739850c3', path: '', url: 'http://localhost:8085')], contextPath: '/pipeline', onFailure: false, war: 'webapps/*.war' 
        }
                }
            }
        }

pipeline {
            agent any
            tools {
                maven 'local_maven'
            }
            stages {
                stage('version'){
                    steps {
                        bat 'mvn --version'
                        bat 'cd'
                    }
                }
    
                stage('Build') {
                    steps {
                        bat 'mvn package'
                    }
    
                    post {
                        success {
                            archiveArtifacts artifacts: '/target/*.war', fingerprint: true
                        }
                    }
                }
                stage('clean'){
                    steps {
                        bat 'mvn clean install'
                    }
                }
                // stage('Deploy to Tomcat') {
                //     steps {
                //         deployToContainer(credentialsId: 'deployuser', url: 'http://localhost:8085', war: '/*.war', contextPath: 'yourAppContext')
                //     }
                // }
            }
        }
